{
  "name": "rare_app_nodejs",
  "version": "0.0.1",
  "scripts": {
    "ng": "./node_modules/.bin/ng",
    "start": "./node_modules/.bin/ng serve --host 0.0.0.0 --proxy-config proxy.conf.json",
    "build": "./node_modules/.bin/ng build",
    "lint": "./node_modules/.bin/ng lint",
    "precommit": "npm run lint",
    "e2e": "./node_modules/.bin/ng e2e",
    "test": "jest --collectCoverage --outputFile=test_results/jest/results.xml --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "test:ci": "npm run lint && npm run test",
    "translate:extract": "ngx-translate-extract --input ./src -m _ -o ./src/assets/i18n/template.json --clean --sort -f namespaced-json && npm run translate:jsonToPot",
    "translate:poToJson": "node ./scripts/poToJson.js",
    "translate:jsonToPot": "node ./scripts/jsonToPot.js"
  },
  "private": true,
  "dependencies": {
    "@angular-redux/store": "^9.0.0",
    "@angular/animations": "~7.1.0",
    "@angular/common": "~7.1.0",
    "@angular/compiler": "~7.1.0",
    "@angular/core": "~7.1.0",
    "@angular/forms": "~7.1.0",
    "@angular/platform-browser": "~7.1.0",
    "@angular/platform-browser-dynamic": "~7.1.0",
    "@angular/router": "~7.1.0",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@studiohyperdrive/api-docs": "1.0.0",
    "@types/lodash-es": "^4.17.1",
    "@types/ramda": "^0.25.44",
    "body-parser": "1.18.3",
    "connect-mongo": "2.0.3",
    "cookie-parser": "1.4.3",
    "core-js": "^2.5.4",
    "deep-extend": "^0.6.0",
    "glob": "7.1.1",
    "helmet": "3.14.0",
    "i18next-conv": "^8.0.1",
    "jest": "23.6.0",
    "joi": "10.4.1",
    "lodash-es": "4.17.11",
    "mongoose": "5.4.0",
    "ng-redux": "^4.1.0",
    "ngx-translate-extract": "^1.0.0",
    "normalizr": "^3.3.0",
    "passport": "0.4.0",
    "ramda": "^0.26.1",
    "redux": "^4.0.1",
    "rxjs": "~6.3.3",
    "session-file-store": "1.0.0",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.11.0",
    "@angular/cli": "~7.1.2",
    "@angular/compiler-cli": "~7.1.0",
    "@angular/language-service": "~7.1.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "@types/redux-immutable-state-invariant": "^2.1.0",
    "codelyzer": "~4.5.0",
    "husky": "^1.3.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest-junit": "^5.2.0",
    "jest-preset-angular": "^6.0.2",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "1.18.9",
    "protractor": "~5.4.0",
    "redux-devtools-extension": "^2.13.7",
    "redux-immutable-state-invariant": "^2.1.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.6"
  },
  "jest": {
    "verbose": false,
    "roots": [
      "src"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "suiteName": "jest tests"
        }
      ]
    ],
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupJest.ts",
    "transformIgnorePatterns": [
      "/node_modules/(?!lodash-es).+\\.js$"
    ],
    "moduleNameMapper": {
      "@environments/(.*)": "<rootDir>/src/environments/$1",
      "@helpers/(.*)": "<rootDir>/src/lib/helpers/$1",
      "@shared/(.*)": "<rootDir>/src/lib/shared/$1",
      "@store/(.*)": "<rootDir>/src/lib/store/$1",
      "@api/(.*)": "<rootDir>/src/lib/api/$1",
      "@core/(.*)": "<rootDir>/src/lib/core/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.module.ts",
      "!src/**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/main.ts",
      "/src/polyfills.ts",
      "/src/setupJest.ts",
      "/src/test.ts",
      "/src/environments/",
      "index.ts"
    ],
    "testURL": "http://localhost:4350/"
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./test-results/jest",
    "outputName": "./results.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
